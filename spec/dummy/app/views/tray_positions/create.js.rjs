if @tp
  page << %Q{ $("#tray_#{@tp.id}").effect("shake"); }
else
  tray_position = render_escaped(:partial => 'shared/tray_position', 
                                 :locals => {:tray_position => @tray_position})
  page << %Q{
    $("#tray").prepend("#{tray_position}");
    $("#tray").sortable("refresh");
  }
end