.header
  =link_to "edit", main_app.edit_presentation_frame_path(frame.presentation, frame)
  -unless frame.title == "Title"
    %h1=frame.title
.menu
  -unless @presentation.root_frame == nil
    .menu_header
      =@presentation.title
    =menutree_ol(@presentation.root_frame.children()) { |item| link_to h(item.title), main_app.presentation_path(@presentation)+"#"+item.position.to_s }

.content
  =content
.footer
  %span.title=presentation.title
  %span.position="#{frame.position}/#{presentation.root_frame.descendants.length}"
